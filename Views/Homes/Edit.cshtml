@model MatureFashionsAppV2.Models.DB.Homes

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Homes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HomeNo" />
            <div class="form-group">
                <label asp-for="HomeName" class="control-label"></label>
                <input asp-for="HomeName" class="form-control" />
                <span asp-validation-for="HomeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HometypeCode" class="control-label"></label>
                <select asp-for="HometypeCode" class="form-control" asp-items="ViewBag.HometypeCode"></select>
                <span asp-validation-for="HometypeCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeAddress" class="control-label"></label>
                <input asp-for="HomeAddress" class="form-control" />
                <span asp-validation-for="HomeAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomePostcode" class="control-label"></label>
                <input asp-for="HomePostcode" class="form-control" />
                <span asp-validation-for="HomePostcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTel" class="control-label"></label>
                <input asp-for="HomeTel" class="form-control" />
                <span asp-validation-for="HomeTel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
